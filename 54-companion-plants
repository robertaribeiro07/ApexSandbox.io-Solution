public Boolean companionPlants(String plant1, String plant2) {
  map<String,String>companheiraMap = new map<String,String>{
        'alface' => 'pepino',
        'cebola' => 'alface',
        'cenoura' => 'cebola',
        'tomate' => 'cebola'
    };
    if ((companheiraMap.get(plant1) == plant2) ||
        (companheiraMap.get(plant2) == plant1)) {
        return true;
    } else {
        return false;
    }
}

  